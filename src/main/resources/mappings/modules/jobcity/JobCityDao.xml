<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.thinkgem.jeesite.modules.jobcity.dao.JobCityDao">

	<sql id="jobCityColumns">
		a.id AS "id",
		a.code AS "code",
		a.city AS "city"
	</sql>

	<sql id="jobCityJoins">
	</sql>

	<select id="get" resultType="JobCity">
		SELECT
			<include refid="jobCityColumns"/>
		FROM job_city a
		<include refid="jobCityJoins"/>
		WHERE a.id = #{id}
	</select>

	<select id="findList" resultType="JobCity">
		SELECT
			<include refid="jobCityColumns"/>
		FROM job_city a
		<include refid="jobCityJoins"/>
		<where>

			<if test="code != null and code != ''">
				AND a.code = #{code}
			</if>
			<if test="city != null and city != ''">
				AND a.city LIKE
					<if test="dbName == 'oracle'">'%'||#{city}||'%'</if>
					<if test="dbName == 'mssql'">'%'+#{city}+'%'</if>
					<if test="dbName == 'mysql'">concat('%',#{city},'%')</if>
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>
			<otherwise>
			</otherwise>
		</choose>
	</select>

	<select id="findAllList" resultType="JobCity">
		SELECT
			<include refid="jobCityColumns"/>
		FROM job_city a
		<include refid="jobCityJoins"/>
		<where>

		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>
			<otherwise>
			</otherwise>
		</choose>
	</select>

	<select id="findCode" resultType="JobCity">
		SELECT
			<include refid="jobCityColumns"/>
		FROM job_city a
		<include refid="jobCityJoins"/>
		<where>
			a.code is not null
		</where>
		GROUP BY a.code
		ORDER BY a.code ASC
	</select>

	<insert id="insert">
		INSERT INTO job_city(
			id,
			code,
			city
		) VALUES (
			#{id},
			#{code},
			#{city}
		)
	</insert>
	
	<update id="update">
		UPDATE job_city SET 	
			code = #{code},
			city = #{city}
		WHERE id = #{id}
	</update>
	
	<update id="delete">
		DELETE FROM job_city
		WHERE id = #{id}
	</update>
	
</mapper>